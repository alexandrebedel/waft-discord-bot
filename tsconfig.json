{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@waft/commands": ["./src/commands/index.ts"],
      "@waft/commands/*": ["./src/commands/*"],
      "@waft/decorators": ["./src/decorators/index.ts"],
      "@waft/decorators/*": ["./src/decorators/*"],
      "@waft/constants": ["./src/constants/index.ts"],
      "@waft/utils": ["./src/utils/index.ts"],
      "@waft/utils/*": ["./src/utils/*"],
      "@waft/models": ["./src/models/index.ts"],
      "@waft/models/*": ["./src/models/*"],
      "@waft/validation": ["./src/validation/index.ts"],
      "@waft/validation/*": ["./src/validation/*"],

      "@waft/lib": ["./src/lib/index.ts"],
      "@waft/lib/*": ["./src/lib/*"],
      "@waft/integrations": ["./src/integrations/index.ts"],
      "@waft/integrations/*": ["./src/integrations/*"],
      "@waft/server": ["./src/server/index.ts"],
      "@waft/server/*": ["./src/server/*"],

      "@waft/types": ["./src/types/index.ts"],
      "@waft/types/*": ["./src/types/*"]
    }
  }
}
